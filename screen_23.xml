<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="19"
        android:background="#ddf1f4"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageButton
            android:id="@+id/back_btn21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/arrow_back"
            android:scaleType="center"
            android:padding="8dp"
            android:onClick="onBackButtonClick"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Booked Sessions"
            android:textAlignment="viewStart"
            android:textColor="#48afb9"
            android:textSize="25sp"
            android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="95dp"
                android:layout_marginStart="5dp"
                android:layout_height="95dp"
                android:src="@mipmap/ic_dp2"
                />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="67dp"
                android:layout_marginTop="27dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_round"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/white_round"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/sample1_screen23"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="John Cooper"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="24 DEC 2023"
                        android:textColor="#ffd700"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:background="@drawable/white_round"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:paddingStart="5dp"
                        android:text="UX Designer @ Google"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="1:00 PM"
                        android:textColor="#ffd700"
                        android:textSize="10sp" />




                </LinearLayout>




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="95dp"
                android:layout_marginStart="5dp"
                android:layout_height="95dp"
                android:src="@mipmap/ic_dp1"></ImageView>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="67dp"
                android:layout_marginTop="27dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_round"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/white_round"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/sample2_screen23"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="Emma Phillips"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="1 Feb 2024"
                        android:textColor="#ffd700"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:background="@drawable/white_round"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:paddingStart="5dp"
                        android:text="Android Developer"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="98dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="1:00 PM"
                        android:textColor="#ffd700"
                        android:textSize="10sp" />



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="400dp"
            android:background="#127272"
            android:gravity="center_vertical">

            <!-- Home -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_home"
                    android:layout_marginHorizontal="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12dp"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="22dp"/>

            </LinearLayout>
            <!-- Search -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    android:layout_marginHorizontal="20dp"
                    app:tint="#373737" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="12dp"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="19dp"/>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#373737"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/circle_drawable"
                android:textSize="27sp"
                android:textAlignment="center"
                android:textStyle="bold" />



            <!-- Chat -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="25dp"
                    android:background="#3aa272"
                    android:src="@drawable/ic_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="12dp"
                    android:textColor="#fff0ff"
                    android:layout_marginHorizontal="29dp"/>

            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginHorizontal="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="12dp"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="14dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>



