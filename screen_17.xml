<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#ddf1f4"
        android:orientation="vertical">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:background="#7f7f7f"
        android:orientation="vertical">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




            <ImageButton
               android:id="@+id/cross_btn17"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/ic_cross"
               android:layout_margin="20dp"
               />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:text="HDR"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    ></TextView>

                <ImageButton
                    android:id="@+id/brightness_btn17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_brightness_low_24"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="18dp"


                    />


            </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:background="#ddf1f4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ddf1f4">

                <TextView
                    android:id="@+id/slow_motion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow Mo"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>

                <!-- Video -->
                <TextView
                    android:id="@+id/video_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"/>

                <!-- Photo -->
                <TextView
                    android:id="@+id/photo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo"
                    android:textColor="#000000"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3a7272"
                    android:layout_marginHorizontal="10dp"/>

                <!-- Square -->
                <TextView
                    android:id="@+id/square_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Square"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Portrait -->
                <TextView
                    android:id="@+id/portrait_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portrait"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ddf1f4">

        <!-- Record Video Icon -->
        <ImageView
            android:id="@+id/gallerybtn17"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_photo"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="25dp"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/outlined_circle"
                android:layout_marginStart="95dp"
                />
        <ImageView
            android:id="@+id/record_video_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:src="@drawable/ic_video"
            android:layout_marginVertical="25dp"/>
        </LinearLayout>
    </LinearLayout>








</LinearLayout>



