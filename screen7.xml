            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="View All"
            android:textColor="#3a7272"
            android:textSize="14sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
