                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="NLP Expert"
                    android:textColor="#000000"
                    android:textSize="8sp" />

