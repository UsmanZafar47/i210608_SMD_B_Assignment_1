                android:id="@+id/Box2"
                android:layout_width="136dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#ddf1f4">

