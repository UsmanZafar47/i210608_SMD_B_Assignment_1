<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:background="@drawable/white_round"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#67d7db"
        android:orientation="vertical">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <ImageButton
            android:id="@+id/back_btn13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/arrow_back"
            android:scaleType="center"
            android:padding="8dp"
            android:onClick="onBackButtonClick"/>


        <TextView
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Book your Session"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="John Cooper"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_dp2_round" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <TextView
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#ddf1f4"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:text="$1500/Session"
            android:textAlignment="viewStart"
            android:textColor="#ffc313"
            android:textSize="20sp"
            android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/msg_btn_booking"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_drawable"
                android:backgroundTint="#ffc313"
                android:src="@drawable/ic_message"/>

            <ImageButton
                android:id="@+id/call_btn_booking"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_drawable"
                android:backgroundTint="#ffc313"
                android:src="@drawable/ic_call"/>

            <ImageButton
                android:id="@+id/video_btn_booking"
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_drawable"
                android:backgroundTint="#ffc313"
                android:src="@drawable/ic_video"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14.8"
        android:background="#ddf1f4"
        android:orientation="vertical">


        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#ffffff"
            android:headerBackground="#67d7db"
            android:focusedMonthDateColor="#3a7272"
            android:selectedWeekBackgroundColor="#67d7db"
            android:unfocusedMonthDateColor="#bababa"
            android:shownWeekCount="6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_marginTop="18dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="9:00 AM"
                android:textSize="16sp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_marginTop="18dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="11:00 AM"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#3d7272"
                android:textColor="#ffffff"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_marginTop="18dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="12:00 PM"
                android:textSize="16sp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:gravity="center"/>


        </LinearLayout>






        <Button

            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/verify_button"
            android:text="Book an Apointment"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>



