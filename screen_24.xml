<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@drawable/white_round"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#ddf1f4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/back_btn24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/arrow_back"
               android:backgroundTint="#3a7272"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:text="Notifications"
                android:textAlignment="viewStart"
                android:textColor="#3a7272"
                android:textSize="25sp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/call_btn_booking"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bell"/>



        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Clear All"
            android:layout_marginLeft="290dp"
            android:textColor="#ffcd00"
            android:textSize="21sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="you have added a metor, Alex. Thank you"
                android:textColor="#3a7272"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_cross"
                android:backgroundTint="#3a7272"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/line_simple"
            android:backgroundTint="#468899"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="your favorites list is expanding. impressive"
                android:textColor="#3a7272"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_cross"
                android:backgroundTint="#3a7272"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/line_simple"
            android:backgroundTint="#468899"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="you have a new message in community."
                android:textColor="#3a7272"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_cross"
                android:backgroundTint="#3a7272"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line_simple"
            android:backgroundTint="#468899"
            android:layout_marginVertical="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="your favorite mentor is online. Say hi to him."
                android:textColor="#3a7272"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_cross"
                android:backgroundTint="#3a7272"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>

        </LinearLayout>








    </LinearLayout>

</LinearLayout>