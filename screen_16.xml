<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/white_round"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#67d7db"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arrow_back"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>



            <ImageButton
                android:id="@+id/call_btn_com"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_drawable"
                android:src="@drawable/ic_call"/>

            <ImageButton
                android:id="@+id/video_btn_com"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle_drawable"
                android:src="@drawable/ic_video"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Cooper's"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Community"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_profile_msg"

            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:background="#ddf1f4"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:background="#ddf1f4">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:background="#ddf1f4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="140dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#377773"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="How was your experience with his \nmentorship? Satisfied??"
                    android:textColor="#000000"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:layout_marginStart="140dp"/>



            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ddf1f4">


            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/circle_drawable"
                android:backgroundTint="#ff99ff"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:background="#ddf1f4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14dp"
                    android:text="Worth it!!"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#ffffff"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:layout_marginStart="20dp"/>



            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#ddf1f4">





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ddf1f4">


            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_profile"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:background="#ddf1f4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14dp"
                    android:text="Impressive"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#ffffff"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:layout_marginStart="20dp"/>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ddf1f4">


            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_profile_msg"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:background="#ddf1f4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14dp"
                    android:text="You are missing out! Go take it!!"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#ffffff"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:layout_marginStart="20dp"/>



            </LinearLayout>



        </LinearLayout>
        <RelativeLayout
            android:id="@+id/chat_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#67d7d9"
            android:elevation="6dp"
            android:padding="8dp">

            <!-- Attachment button -->
            <ImageButton
                android:id="@+id/attachment_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_attach" />

            <!-- Text input field -->
            <EditText
                android:id="@+id/chat_input_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/attachment_button"
                android:layout_toStartOf="@id/send_button"
                android:hint="Type a message..."
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@null"
                android:textColor="#000000" />


            <ImageButton

                android:layout_toStartOf="@id/send_button"
                android:id="@+id/mic_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_mic" />

            <!-- Send button -->
            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_send" />

        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#127272"
        android:gravity="center_vertical">

        <!-- Home -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_home"
                android:layout_marginHorizontal="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12dp"
                android:textColor="#373737"
                android:layout_marginHorizontal="22dp"/>

        </LinearLayout>
        <!-- Search -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:layout_marginHorizontal="20dp"
                app:tint="#373737" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="12dp"
                android:textColor="#373737"
                android:layout_marginHorizontal="19dp"/>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#373737"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/circle_drawable"
            android:textSize="27sp"
            android:textAlignment="center"
            android:textStyle="bold" />



        <!-- Chat -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="25dp"
                android:src="@drawable/ic_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="12dp"
                android:textColor="#fff0ff"
                android:layout_marginHorizontal="29dp"/>

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_btn16"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_profile"
                android:layout_marginHorizontal="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12dp"
                android:textColor="#373737"
                android:layout_marginHorizontal="14dp"/>

        </LinearLayout>

    </LinearLayout>








</LinearLayout>



