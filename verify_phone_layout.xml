<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="20"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#ddf1f4"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:text="Verify your Phone Number"
            android:textAlignment="center"
            android:textColor="#2DA0B1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="4dp"
            android:text="We've sent a code to +92 3210000000"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/otp_circle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#2DA0B1"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/otp2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/otp_circle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#2DA0B1"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/otp_circle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/otp_circle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#2DA0B1"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/otp_circle"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#2DA0B1"
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:id="@+id/login_btn3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="102dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/verify_button"
            android:paddingHorizontal="64dp"
            android:text="Login"
            android:textColor="#ddf1f4"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="110dp"
            android:layout_marginVertical="4dp"
            android:text="Send Code again"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="16sp" />



    </LinearLayout>

<LinearLayout


            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#48AFB9"
            android:orientation="horizontal">

            <!-- Number buttons 1 to 9 -->
            <Button
                android:background="@drawable/keypad"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30dp"
                />

            <Button
                android:background="@drawable/keypad"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="2" />

            <Button
                android:background="@drawable/keypad"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="3" />

</LinearLayout>

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#48AFB9"
        android:orientation="horizontal">

        <!-- Number buttons 1 to 9 -->
        <Button
            android:background="@drawable/keypad"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="4"
            android:textAlignment="center"
            android:textSize="30dp"
            />

        <Button
            android:background="@drawable/keypad"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="5" />

        <Button
            android:background="@drawable/keypad"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="6" />

    </LinearLayout>

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#48AFB9"
        android:orientation="horizontal">

        <!-- Number buttons 1 to 9 -->
        <Button
            android:background="@drawable/keypad"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="7"
            android:textAlignment="center"
            android:textSize="30dp"
            />

        <Button
            android:background="@drawable/keypad"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="8" />

        <Button
            android:background="@drawable/keypad"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="9" />

    </LinearLayout>

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#48AFB9"
        android:orientation="horizontal">

                <!-- Empty space for number 0 -->
            <Space

                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                />

            <Button
                android:background="@drawable/keypad"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="0" />

            <!-- Delete button -->
            <ImageButton
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="0"   android:src="@android:drawable/ic_input_delete"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Delete"
                android:onClick="onKeyClick" />


</LinearLayout>
    </LinearLayout>






