<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#ddf1f4"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddf1f4"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mentor"
            android:textAlignment="center"
            android:textColor="#2DA0B1"
            android:textSize="50sp"
            android:textStyle="bold|italic"
            android:layout_marginVertical="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="me"
            android:textAlignment="viewStart"
            android:textColor="#EAD005"
            android:textSize="50sp"
            android:textStyle="bold|italic"
            android:layout_marginVertical="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:background="#48AFB9"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started!"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="7dp"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="Name"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Name"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/signup_drawables"
            android:backgroundTint="#ffffff"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="Email"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Email"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/signup_drawables"
            android:textColor="#5C5C5C"
            android:backgroundTint="#ffffff"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="Contact Number"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Contact Number"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/signup_drawables"
            android:textColor="#5C5C5C"
            android:backgroundTint="#ffffff"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="Country"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/countryMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_drop_down_arrow"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="City"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/cityMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_drop_down_arrow"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="Password"

            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Password"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:background="@drawable/signup_drawables"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            android:backgroundTint="#ffffff"



            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="Password must be at least 8  characters long"
            android:textColor="#ffffff"
            android:textSize="10sp" />



        <Button
            android:id="@+id/signup_btn2"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="20dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            android:textColor="#48AFB9"
            android:textSize="14sp"
            android:paddingHorizontal="30dp"
            android:textStyle="bold"
            android:text="SignUp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="0dp"
                android:text="Already Have an account? "
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/LoginView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="#48AFB9"
                android:layout_marginTop="0dp"
                android:text="Login"
                android:background="#48AFB9"
                android:textColor="#1560AA"
                android:textSize="15sp" />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>



