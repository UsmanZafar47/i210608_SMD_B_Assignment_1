<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#ddf1f4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="14dp"
            android:paddingLeft="10dp"
            android:background="@drawable/white_round"
            android:layout_marginTop="40dp"
            android:text="Search"
            android:textAlignment="viewStart"
            android:textColor="#5C5C5C"
            android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_scn8_btn"
                android:background="@drawable/ic_search"
                android:layout_marginTop="50dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="Recent searches"
            android:textAlignment="viewStart"
            android:textColor="#48afb9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mentor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@drawable/ic_cross"
            android:text="Mentor 1"
            android:textSize="17sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>
        <TextView
            android:id="@+id/mentor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/ic_cross"
            android:text="Mentor 2"
            android:textSize="17sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>


        <TextView
            android:id="@+id/mentor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/ic_cross"
            android:text="Mentor 3"
            android:textSize="17sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="#89cbcb"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="22dp"
            android:text="Browse Categories"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="24sp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_auto_graph_24"
            android:background="@drawable/circle_drawable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:text="Entrepreneurship"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="20sp"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="27dp"
                android:layout_marginLeft="64dp"
                android:src="@drawable/arrow_outward_icon" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="22dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_airline_stops_24"
                android:background="@drawable/circle_drawable"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:text="Personal Growth"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="27dp"
                android:layout_marginLeft="71dp"
                android:src="@drawable/arrow_outward_icon" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/edu_icon"
                android:background="@drawable/circle_drawable"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="15dp"
                android:text="Education"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="27dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/arrow_outward_icon" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#127272"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Home -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_scn8_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:text="Home"
                    android:textColor="#373737"
                    android:textSize="12dp" />

            </LinearLayout>
            <!-- Search -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/search_btnn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/ic_search"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19dp"
                    android:text="Search"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/add8_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/circle_drawable"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#373737"
                android:textSize="27sp"
                android:textStyle="bold" />


            <!-- Chat -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/chat_btn8"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="25dp"
                    android:src="@drawable/ic_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="29dp"
                    android:text="Chat"
                    android:textColor="#373737"
                    android:textSize="12dp" />

            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_btn8"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="14dp"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:text="Profile"
                    android:textColor="#373737"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>



