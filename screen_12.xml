<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"
    tools:context=".MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#ddf1f4"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/arrow_back"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Mentor"
                android:layout_marginHorizontal="45dp"
                android:layout_marginVertical="5dp"
                android:textAlignment="viewStart"
                android:textColor="#2da0b1"
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help us expand!"
                android:layout_marginStart="100dp"
                android:layout_marginVertical="1dp"
                android:textAlignment="viewStart"
                android:textColor="#2da0b1"
                android:textSize="17sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ddf1f4"
            android:orientation="horizontal">

        </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:background="@drawable/white_round"
        android:backgroundTint="#67d7db"
        android:orientation="vertical">




        <LinearLayout
            android:id="@+id/vid_btn_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:backgroundTint="#ddf1f4"
                android:background="@drawable/rounded_review_box">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_video"
                    android:layout_marginHorizontal="55dp"
                    android:layout_marginTop="15dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Video"
                    android:layout_marginLeft="30dp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/photo_btn12"
                android:layout_width="150dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="15dp"
                android:layout_height="80dp"
                android:backgroundTint="#ddf1f4"
                android:orientation="vertical"
                android:background="@drawable/rounded_review_box">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_camera"
                    android:layout_marginHorizontal="55dp"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Photo"
                    android:layout_marginLeft="25dp"></TextView>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Name"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/signup_drawables"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Description"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="3dp"

            android:background="@drawable/signup_drawables"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="Status"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_drop_down"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />

        <Button

            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/verify_button"
            android:paddingHorizontal="6dp"
            android:text="Upload"
            android:textColor="#ddf1f4"
            android:textSize="19sp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="120dp"
            android:background="#127272"
            android:gravity="center_vertical">

            <!-- Home -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/home_scn12_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_home"
                    android:layout_marginHorizontal="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12dp"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="22dp"/>

            </LinearLayout>
            <!-- Search -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/search_btnn12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    android:layout_marginHorizontal="20dp"
                    app:tint="#373737" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="12dp"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="19dp"/>

            </LinearLayout>



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/circle_drawable"
                    android:textSize="27sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />



            <!-- Chat -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/chat_btn12"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="25dp"
                    android:src="@drawable/ic_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="12dp"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="29dp"/>

            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_btn12"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginHorizontal="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="12dp"
                    android:textColor="#373737"
                    android:layout_marginHorizontal="14dp"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>



</LinearLayout>



