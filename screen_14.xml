<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@drawable/white_round"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#ddf1f4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/arrow_back"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>


            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Chats"
                android:textAlignment="viewStart"
                android:textColor="#3a7272"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>



            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="My Community"
                android:textAlignment="viewStart"
                android:textColor="#727272"
                android:textSize="18sp"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:background="#ffffff">


            <ImageView
                android:id="@+id/comm_layout_btn"
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_online"

                />


            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_online"

                />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_online"

                />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_offline"

                />



        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="All messages"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/msg_layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:background="#ddf1f4">


            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_profile_msg"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:background="#ddf1f4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="22dp"
                android:text="John Cooper"
                android:textColor="#000000"
                android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="14dp"
                    android:text="1 new message"
                    android:textColor="#ff0000"
                    android:textStyle="bold" />



            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:background="#ddf1f4">


            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_online"
                android:src="@mipmap/ic_dp3_foreground"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:background="#ddf1f4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="22dp"
                    android:text="Ema Phillips"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="14dp"
                    android:text="No New Messages"
                    android:textColor="#727272"
                     />



            </LinearLayout>
        </LinearLayout>





        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#127272"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Home -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_btn14"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:text="Home"
                android:textColor="#373737"
                android:textSize="12dp" />

        </LinearLayout>
        <!-- Search -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/search_btnn14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/ic_search"
                app:tint="#373737" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="19dp"
                android:text="Search"
                android:textColor="#373737"
                android:textSize="12dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/add_btn14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/circle_drawable"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#373737"
            android:textSize="27sp"
            android:textStyle="bold" />


        <!-- Chat -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="25dp"
                android:src="@drawable/ic_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29dp"
                android:text="Chat"
                android:textColor="#ffffff"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_btn14"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="14dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:text="Profile"
                android:textColor="#373737"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>



