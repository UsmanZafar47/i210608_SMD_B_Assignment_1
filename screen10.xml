<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:background="@drawable/white_round"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#67d7db"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/arrow_back"
            android:scaleType="center"
            android:padding="8dp"
            android:onClick="onBackButtonClick"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:text="Hi,I'm "
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="58dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle_drawable" />


        </LinearLayout>
        <TextView
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:text="John Cooper"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#ddf1f4"
            />


        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="UX Designer at"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textColor="#ffffff"
                />

        </LinearLayout>
        <TextView
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:text="Google"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#ddf1f4"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:text="About me"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:text="I am a passionate UX designer at Google with a focus on \n
creating user-centric and intuitive interfaces. With 10 years of\n
experience, I have had the opportunity to work on diverse\n
projects that have shaped my understanding of design\n
principles and user experience."
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="11sp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="#ddf1f4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="22dp"
            android:text="My Expertise Include"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="19sp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:text="Career Advice"
                android:textAlignment="viewStart"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#67d7db"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="25dp"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginVertical="30dp"
                android:text="User Experience Design"
                android:textAlignment="viewStart"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#67d7db"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:textSize="15sp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:text="Leadership"
                android:textAlignment="viewStart"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#67d7db"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="25dp"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginVertical="5dp"
                android:text="Prototyping"
                android:textAlignment="viewStart"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#67d7db"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="25dp"
                android:textSize="15sp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rev_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:text="Drop a review"
                android:textAlignment="viewStart"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#ffc201"
                android:textColor="#3a7272"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="25dp"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/com_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginVertical="30dp"
                android:text="Join Community"
                android:textAlignment="viewStart"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#ffc201"
                android:textColor="#3a7272"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:textSize="15sp"


                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#127272"
            android:gravity="center_vertical">


        </LinearLayout>


        <Button
            android:id="@+id/book_ses_btn"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/verify_button"
            android:text="Book a Session"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>



