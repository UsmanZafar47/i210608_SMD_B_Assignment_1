<!-- res/drawable/otp_circle_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <!-- Inner color -->
            <solid android:color="#ddf1f4" />
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <!-- Outer outline color -->
            <stroke android:color="#2DA0B1" android:width="1dp" />
        </shape>
    </item>
</layer-list>
