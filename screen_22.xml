<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:gravity="top"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/white_round"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#67d7db"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/back_btn22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arrow_back"
                android:scaleType="center"
                android:padding="8dp"
                android:onClick="onBackButtonClick"/>





        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/ic_profile_msg"

            />



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="#ddf1f4"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ali"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/signup_drawables"
            android:textColor="#5C5C5C"
            android:backgroundTint="#ffffff"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="Email"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Email"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/signup_drawables"
            android:textColor="#5C5C5C"
            android:backgroundTint="#ffffff"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="Contact Number"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+92 321 2242022"
            android:textAlignment="viewStart"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/signup_drawables"
            android:textColor="#5C5C5C"
            android:backgroundTint="#ffffff"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="Country"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="16sp"
            android:textStyle="bold"
            />



        <Spinner
            android:id="@+id/countryMenu22"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_drop_down_arrow"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:text="City"
            android:textAlignment="viewStart"
            android:textColor="#3a7272"
            android:textSize="16sp"
            android:textStyle="bold"
            />


        <Spinner
            android:id="@+id/cityMenu22"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_drop_down_arrow"
            android:textColor="#5C5C5C"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingVertical="10dp"
            />


        <Button
            android:id="@+id/update_profile_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/verify_button"
            android:paddingHorizontal="64dp"
            android:text="Update Profile"
            android:textColor="#ddf1f4"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

